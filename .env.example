# =============================================================================
# Instagram Campaign Analytics API - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.

# --- Supabase (required) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key

# --- Apify (required for scraping) ---
APIFY_TOKEN=apify_api_your_token_here

# --- LLM Configuration ---
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=sk-your_openai_key_here

# --- CORS ---
# Use "*" for development, specific domain for production
# Example prod: https://instagram-campaign-web.vercel.app
ALLOWED_ORIGINS=*

# --- Scheduler ---
SCRAPING_INTERVAL_HOURS=6

# --- Logging ---
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
